{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    // "allowJs": true,
    // "checkJs": false,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "astro:db": ["./node_modules/@astrojs/db"]
    }
  },
  "include": [
    "src",
    "db",
    "*.ts",
    "**/*.astro",
    "env.d.ts",
    ".astro/types.d.ts",
    ".astro/integrations/astro_db/db.d.ts"
  ],
  "exclude": ["node_modules"]
  // "resolveJsonModule": true
}
